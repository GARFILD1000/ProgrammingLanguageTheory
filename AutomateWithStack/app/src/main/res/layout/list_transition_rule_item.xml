<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ruleLeftState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/colorTextDark"
            android:singleLine="true"
            android:inputType="textNoSuggestions"
            android:hint="empty" />

        <EditText
            android:id="@+id/ruleLeftSymbol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="@color/colorTextDark"
            android:singleLine="true"
            android:inputType="textNoSuggestions"
            android:hint="Î»" />

        <EditText
            android:id="@+id/ruleLeftStack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/colorTextDark"
            android:singleLine="true"
            android:inputType="textNoSuggestions"
            android:hint="empty" />

        <ImageView
            android:id="@+id/ruleArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_rule_arrow" />

        <EditText
            android:id="@+id/ruleRightState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/colorTextDark"
            android:singleLine="true"
            android:inputType="textNoSuggestions"
            android:hint="empty" />

        <EditText
            android:id="@+id/ruleRightStack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorTextDark"
            android:singleLine="true"
            android:inputType="textNoSuggestions"
            android:textAlignment="center"
            android:hint="empty"/>
        <ImageButton
            android:id="@+id/deleteRule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_delete"
            android:background="@android:color/transparent"
            />
    </LinearLayout>
</layout>